alias gitv='_(){ local idx=${3};local str="";local org=${1};local repo=${2:-$org};(($#<1))||[[ "${1}" =~ ^- ]]&&echo "gitv: <org> [<repo> def=<org>] [<get tag> [prev nth tag: n=1,2,3..]]>]"&&return 1;[[ -z "${idx}" ]] && str=$(curl -S https://api.github.com/repos/${org}/${repo}/releases/latest 2>/dev/random | grep -i tag_name|sed "s/\"//g;s/,//g;s/tag_name/${repo^}/;s/^[ ]*//");if [[ -z ${str} ]]; then let idx+=$((idx==0));str=$(curl -S https://api.github.com/repos/${org}/${repo}/tags 2>/dev/random | awk -vidx=${idx} "BEGIN{i=0}{if(\$0~/name/){matches[i++]=\$0};}END{print matches[idx];}"|sed "s/\"//g;s/,//g;s/name/${repo^}/;s/^[ ]*//");fi;echo "${str}";}; _'
